{
  "name": "contributte/forms",
  "description": "Extra contrib to nette/forms",
  "keywords": [
    "nette",
    "forms",
    "inputs",
    "checkbox",
    "rules",
    "validation",
    "renderers"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/contributte/forms",
  "authors": [
    {
      "name": "Milan Felix Sulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 7.1",
    "nette/forms": "~2.4.3"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "ninjify/nunjuck": "^0.2",
    "nette/application": "~2.4.12",
    "nette/di": "~2.4.11",
    "nette/utils": "~2.5.2"
  },
  "suggest": {
    "nette/di": "to use FormFactoryExtension[CompilerExtension]"
  },
  "conflict": {
    "nette/application": "<2.4.12"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Forms\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -c tests/php-unix.ini tests/cases"
    ],
    "coverage": [
      "tester -s -p php --colors 1 -c tests/php-unix.ini -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:0.10",
      "composer require -d temp/phpstan phpstan/phpstan-nette:0.10",
      "composer require -d temp/phpstan phpstan/phpstan-strict-rules:0.10"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  }
}
